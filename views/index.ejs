<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Users List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <style>
      #logout {
        position: absolute;
        right: 11%;
        top: 80px;
      }
      #add {
        position: absolute;
        left: 13%;
        top: 80px;
      }
      .table {
        position: absolute;
        top: 140px;
        text-align: center;
        left: 13%;
      }
    </style>

    <div class="text-right px-3" id="logout">
      <button
        type="button"
        class="btn btn-outline-danger"
        onclick="location.href=`/admin/logout`"
      >
        Logout
      </button>
    </div>
    <div class="text-right">
      <button
        type="button"
        class="btn btn-outline-primary"
        id="add"
        onclick="location.href=`/admin/addusers` "
      >
        Add Users
      </button>
    </div>
    <table class="table w-75 table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Password</th>
        </tr>
      </thead>
      <% results.forEach((results,index)=> { %>

      <tbody>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= results.name %></td>
          <td><%= results.email %></td>
          <td><%= results.password %></td>

          <td>
            <button
              type="submit"
              value="Delete"
              class="btn btn-primary btn-sm m-0"
              onclick="location.href=`/admin/editusers/<%= results._id %>`"
            >
              <i class="far fa-edit"></i>
            </button>
            <button
              type="submit"
              value="Delete"
              class="btn btn-danger btn-sm m-0"
            >
              <a
                class="link-light"
                href="/admin/userslist/<%= results._id %>"
                onclick="return confirm('Are you sure you want to delete this item?');"
                ><i class="fas fa-trash-alt"></i
              ></a>
            </button>
          </td>
        </tr>
      </tbody>
      <% }) %>
    </table>
  </body>
</html>
